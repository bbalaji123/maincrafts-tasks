  "databaseSchema": {
    "coordinators": {
      "fields": ["username", "email", "password", "firstName", "lastName", "department", "role", "phoneNumber", "isActive", "lastLogin"],
      "indexes": ["username", "email"],
      "relationships": ["hasMany events"]
    },
    "events": {
      "fields": ["title", "description", "category", "eventDate", "registrationStartDate", "registrationEndDate", "venue", "maxParticipants", "currentParticipants", "coordinatorId", "status", "rules", "prizes", "requirements"],
      "indexes": ["coordinatorId", "eventDate", "category", "status"],
      "relationships": ["belongsTo coordinator", "hasMany participants"]
    },
    "participants": {
      "fields": ["name", "email", "phoneNumber", "college", "department", "year", "rollNumber", "eventId", "registrationStatus", "paymentStatus", "teamMembers"],
      "indexes": ["eventId", "email", "registrationStatus"],
      "relationships": ["belongsTo event"]
    }
  },
